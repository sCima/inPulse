<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".features.hub.settings.SettingsFragment"
    android:background="@color/fgBg">

    <include
        layout="@layout/component_bar_center_settings"
        android:id="@+id/includeBarSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/profile_settings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textColor="@color/fontBlue"
        android:text="@string/settings_profile_title"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/includeBarSettings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/settings_photo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:textAllCaps="false"
        android:textStyle="normal"
        android:textAlignment="textStart"
        android:text="@string/settings_profile_photo"
        app:layout_constraintTop_toBottomOf="@id/profile_settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/shape_search"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/settins_anonimo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:textStyle="normal"
        android:textAllCaps="false"
        android:textAlignment="textStart"
        android:text="@string/settings_profile_anonimo"
        app:layout_constraintTop_toBottomOf="@id/settings_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/shape_search"/>

    <TextView
        android:id="@+id/text_desc_anonimo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_settings_anonimo"
        android:textColor="@color/euroBlue"
        android:textSize="12sp"
        android:textAlignment="center"
        android:layout_marginTop="3dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/settins_anonimo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggle_group_anonimo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:singleSelection="true"
        app:selectionRequired="true"
        app:checkedButton="@id/button_publico"
        app:layout_constraintTop_toBottomOf="@id/text_desc_anonimo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_publico"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Público" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_anonimo"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Anônimo" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/settings_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:textStyle="normal"
        android:textAllCaps="false"
        android:textAlignment="textStart"
        android:text="@string/settings_profile_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/shape_search"
        app:layout_constraintTop_toBottomOf="@id/toggle_group_anonimo" />

    <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/password_change_container"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:visibility="gone"
    app:layout_constraintTop_toBottomOf="@id/settings_password"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edit_text_old_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Senha atual"
        android:inputType="textPassword"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edit_text_new_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nova senha"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/edit_text_old_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_save_password"
        android:layout_marginEnd="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_save_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:backgroundTint="@color/euroYellow"
        android:textColor="@color/euroBlue"
        app:layout_constraintTop_toTopOf="@id/edit_text_new_password"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/settings_logoff"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:textAllCaps="false"
        android:textAlignment="textStart"
        android:textStyle="normal"
        android:text="@string/settings_profile_logoff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/shape_search"
        app:layout_constraintTop_toBottomOf="@id/password_change_container" />

    <TextView
        android:id="@+id/app_settings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textColor="@color/fontBlue"
        android:text="@string/settings_app_title"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/settings_logoff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/settings_theme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:textAllCaps="false"
        android:textStyle="normal"
        android:textAlignment="textStart"
        android:text="@string/settings_app_theme"
        app:layout_constraintTop_toBottomOf="@id/app_settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/shape_search"/>

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggle_group_theme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:singleSelection="true"
        app:selectionRequired="true"
        app:checkedButton="@id/button_publico"
        app:layout_constraintTop_toBottomOf="@id/settings_theme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_light"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tema_claro" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_dark"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tema_escuro" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

</androidx.constraintlayout.widget.ConstraintLayout>