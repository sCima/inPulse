<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/shape_recycler_ideias"
    android:padding="12dp"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/imagemIdeia"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_image_rounded"
        android:contentDescription="Imagem da ideia"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tituloIdeia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nome da ideia etc"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/fontBlue"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/imagemIdeia"
        app:layout_constraintEnd_toStartOf="@id/btnFavoritar"
        app:layout_constraintTop_toTopOf="@id/imagemIdeia" />

    <TextView
        android:id="@+id/autorIdeia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Por Carlos S."
        android:textColor="@color/fontLight"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tituloIdeia"
        app:layout_constraintTop_toBottomOf="@id/tituloIdeia" />

    <TextView
        android:id="@+id/dataIdeia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12/04/2025"
        android:layout_marginTop="6dp"
        android:textColor="@color/fontBlue"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/autorIdeia"
        app:layout_constraintTop_toBottomOf="@id/autorIdeia" />

    <ImageButton
        android:id="@+id/btnFavoritar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@null"
        android:src="@drawable/baseline_settings_24"
        android:contentDescription="Curtir"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="@color/euroBlue" />
</androidx.constraintlayout.widget.ConstraintLayout>