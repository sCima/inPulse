<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    tools:context=".fragments.ProfileFragment"
    android:background="@color/bronze"
    android:id="@+id/profile_fragment">

    <include
        layout="@layout/component_bar_center"
        android:id="@+id/includeBarProfile"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/button_bar_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/includeBarProfile"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/bgWhite"
            >

            <TextView
                android:id="@+id/btn_ideias_profile"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="0dp"
                android:padding="2dp"
                android:textSize="16sp"
                android:text="@string/bnt_ranking_ideias"
                android:background="@color/fgBar"
                android:textColor="@color/euroBlue"
               android:textAlignment="center"/>

            <TextView
                android:id="@+id/btn_contribuicoes_profile"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="0dp"
                android:padding="2dp"
                android:textSize="16sp"
                android:text="@string/btn_profile_contribuicoes"
                android:background="@android:color/transparent"
                android:textColor="@color/euroBlue"
                android:textAlignment="center"
                />

            <TextView
                android:id="@+id/btnStatsProfile"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="0dp"
                android:padding="2dp"
                android:textSize="16sp"
                android:text="@string/bnt_profile_stats"
                android:background="@android:color/transparent"
                android:textColor="@color/euroBlue"
                android:textAlignment="center"
                />
        </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewProfileIdeas"
        android:background="@color/bgWhite"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="8dp"
        android:paddingTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_bar_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_recycler_ideias_profile"
        android:visibility="visible"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewProfileContribuicoes"
        android:background="@color/bgWhite"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="8dp"
        android:paddingTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_bar_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_recycler_ideias_profile"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>