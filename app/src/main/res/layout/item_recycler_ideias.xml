<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="@drawable/shape_recycler_ideias"
    android:layout_margin="8dp">

    <include
        layout="@layout/component_bar"
        android:id="@+id/includeBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerInterno"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/includeBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible">

    <LinearLayout
        android:id="@+id/layoutIcones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="@id/includeBar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="6dp"
        tools:ignore="NotSibling">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/tag_setor_logistica" />
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/tag_tipo_criacao"
            android:layout_marginStart="8dp" />
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/tag_complexidade_baixa"
            android:layout_marginStart="8dp" />
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/tag_urgencia_urgente"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imagemIdeia"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_image_rounded"
        android:contentDescription="@string/image_idea_desc"
        app:layout_constraintTop_toBottomOf="@id/includeBar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="6dp"
        tools:ignore="NotSibling" />

    <TextView
        android:id="@+id/resumoIdeia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/idea_problema"
        android:textSize="12sp"
        android:layout_marginTop="6dp"
        android:textColor="@color/fontBlack"
        app:layout_constraintTop_toBottomOf="@id/layoutIcones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/layoutIcones"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textoCompleto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/idea_desc"
        android:textSize="12sp"
        android:textColor="@color/fontBlack"
        app:layout_constraintTop_toBottomOf="@id/imagemIdeia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginTop="8dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/footerContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/autorIdeia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/idea_author"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="12dp" />

            <TextView
                android:id="@+id/dataIdeia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/idea_date"
                android:textColor="@color/fontBlack"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/autorIdeia"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageButton
                android:id="@+id/btnContribuir"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@null"
                android:src="@drawable/baseline_conts_24"
                android:contentDescription="@string/btn_contribuir_desc"
                app:tint="@color/euroBlue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnCurtir"
                android:layout_marginEnd="24dp" />

            <TextView
                android:id="@+id/numberLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/number_likes"
                android:textColor="@color/fontBlue"
                android:textSize="24sp"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="@id/btnCurtir"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnCurtir"
                tools:text="0"/>

            <ImageButton
                android:id="@+id/btnCurtir"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@null"
                android:src="@drawable/baseline_like_24"
                android:contentDescription="@string/btn_curtir_desc"
                app:tint="@color/euroBlue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/btnVoltarItem"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@null"
        android:src="@drawable/baseline_back_24"
        app:tint="@color/euroBlue"
        android:layout_marginStart="3dp"
        app:layout_constraintTop_toBottomOf="@id/includeBar"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerConts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/btnVoltarItem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/footerConts"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <LinearLayout
        android:id="@+id/footerConts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerConts"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:visibility="gone">

        <EditText
            android:id="@+id/et_pergunta"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="@string/conts_hint"
            android:inputType="text"
            android:textColor="@color/fontGrey"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/btn_enviar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_arrow_up_24"
            android:background="@drawable/shape_button_dark_blue"
            android:scaleType="center"
            android:padding="4dp"
            android:layout_margin="4dp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
