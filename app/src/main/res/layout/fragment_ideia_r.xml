<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".features.newidea.fragments.IdeaFragmentR"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/txt_resumo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/text_idea_resumo"
        android:textSize="18sp"
        android:textColor="@color/fontGrey"
        />

    <EditText
        android:id="@+id/et_nome_ideia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_resumo"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:background="@drawable/shape_edit_text"
        android:hint="@string/et_hint_nome_ideia"
        android:textColorHint="@color/fontBlue"
        android:gravity="start"
        android:textSize="22sp"
        />

    <TextView
        android:id="@+id/txt_resumo_problema_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_nome_ideia"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:text="@string/text_idea_problema"
        android:textSize="22sp"
        android:textColor="@color/fontDarkGrey"
        />

    <TextView
        android:id="@+id/txt_resumo_problema"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_resumo_problema_title"
        app:layout_constraintEnd_toStartOf="@id/layout_tags"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:text="Lorem ipsum"
        android:background="@drawable/shape_edit_text"
        android:textColorHint="@color/fontGrey"
        android:gravity="start"
        android:textSize="14sp"
        />

    <LinearLayout
        android:id="@+id/layout_tags"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/txt_resumo_problema_title"
        app:layout_constraintStart_toEndOf="@id/txt_resumo_problema"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layoutTags2"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:weightSum="2">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:src="@drawable/fabrica"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:src="@drawable/melhoria"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutTags2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layout_tags"
        app:layout_constraintStart_toEndOf="@id/txt_resumo_problema"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/txt_resumo_problema"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:weightSum="2">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:src="@drawable/media"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:src="@drawable/programada"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_resumo_desc_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_resumo_problema"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:text="@string/text_idea_solucao"
        android:textSize="22sp"
        android:textColor="@color/fontDarkGrey"
        />

    <TextView
        android:id="@+id/txt_resumo_solucao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_resumo_desc_title"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:text="Lorem ipsum"
        android:background="@drawable/shape_edit_text"
        android:textColorHint="@color/fontGrey"
        android:gravity="start"
        android:textSize="14sp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewImagePreview"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_resumo_solucao">

        <ImageView
            android:id="@+id/imageConfirmationPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_image_rounded"
            android:src="@drawable/bg_image_rounded"
            android:contentDescription="Imagem para confirmação da ideia" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>