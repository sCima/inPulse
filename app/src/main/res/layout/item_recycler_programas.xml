<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@drawable/shape_recycler_ideias"
    android:layout_margin="8dp">

    <include
        layout="@layout/component_bar_programas"
        android:id="@+id/includeBarP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerInternoP"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/includeBarP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible">


        <TextView
            android:id="@+id/descricaoPrograma"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/idea_desc"
            android:textSize="12sp"
            android:textColor="@color/fontBlack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/containerInternoP"
            app:layout_constraintEnd_toEndOf="parent"
 />

        <TextView
            android:id="@+id/dataFimPrograma"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/programa_data_fim"
            android:textSize="14sp"
            android:textColor="@color/fontBlack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/descricaoPrograma"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/footerContainerP"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/verIdeias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/programa_btn_ver_ideias"
                android:textColor="@color/fontBlue"
                android:textSize="18sp"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="12dp" />

            <ImageButton
                android:id="@+id/btnEnviarIdeia"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@null"
                android:src="@drawable/baseline_enviar_ideias_24"
                app:tint="@color/euroBlue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/btnVoltarItemP"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@null"
        android:src="@drawable/baseline_back_24"
        app:tint="@color/euroBlue"
        android:layout_marginStart="3dp"
        app:layout_constraintTop_toBottomOf="@id/includeBarP"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerIdeiasP"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/btnVoltarItemP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:nestedScrollingEnabled="true"
        />

</androidx.constraintlayout.widget.ConstraintLayout>