<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_recycler_ideias"
    android:layout_margin="8dp"
    android:id="@+id/layout_programas">

    <include
        layout="@layout/component_bar"
        android:id="@+id/includeBarP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerInternoP"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/includeBarP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible">

        <TextView
            android:id="@+id/dataInicioPrograma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/programa_data_inicio"
            android:textSize="14sp"
            android:textColor="@color/fontDarkGrey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/containerInternoP"
            app:layout_constraintEnd_toStartOf="@id/dataFimPrograma" />

        <TextView
            android:id="@+id/dataFimPrograma"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/programa_data_fim"
            android:textSize="14sp"
            android:textColor="@color/fontDarkGrey"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/dataInicioPrograma"
            app:layout_constraintTop_toTopOf="@id/containerInternoP"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/descricaoPrograma"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/idea_desc"
            android:textSize="12sp"
            android:textColor="@color/fontBlack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dataFimPrograma"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewIdeasPrograma"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="6dp"
            app:layout_constraintTop_toBottomOf="@id/descricaoPrograma"
            app:layout_constraintBottom_toTopOf="@id/btnEnviarIdeia"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            tools:listitem="@layout/item_recycler_idea_p"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/text_dica"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/dica_programa"
            android:textSize="14sp"
            android:layout_margin="6dp"
            android:textAlignment="center"
            android:textColor="@color/euroBlue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/descricaoPrograma"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewSuasIdeasPrograma"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="6dp"
            app:layout_constraintTop_toBottomOf="@id/text_dica"
            app:layout_constraintBottom_toTopOf="@id/btnEnviarIdeia"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            tools:listitem="@layout/item_recycler_idea_p"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnInscrever"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_inscrever"
            android:textColor="@color/fontBlue"
            android:textSize="14sp"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@id/recyclerViewIdeasPrograma"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageButton
            android:id="@+id/btnEnviarIdeia"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/baseline_enviar_ideias_bloq_24"
            android:layout_marginEnd="6dp"
            android:contentDescription="Icone de enviar ideia ao programa"
            app:layout_constraintTop_toBottomOf="@id/recyclerViewIdeasPrograma"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>



        </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>