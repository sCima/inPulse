<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="3dp"
    android:layout_margin="6dp"
    android:layout_weight="2">

        <TextView
            android:id="@+id/btnColaboradores"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="4dp"
            android:layout_marginHorizontal="4dp"
            android:text="@string/btn_ranking_colaboradores"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/shape_button_blue"
            android:textColor="@color/euroBlue"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btnOrdenacao"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:text="@string/btn_ranking_ordem"
            android:layout_marginHorizontal="4dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/shape_button_blue"
            android:textColor="@color/euroBlue"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_width="match_parent"
            />

        <Spinner
            android:id="@+id/spinnerFiltro"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/shape_button_blue"
            android:padding="4dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/fontGrey"
            android:popupBackground="@color/fgBg"
            android:textAlignment="center"/>
    </LinearLayout>

</LinearLayout>
