<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="3dp">

    <LinearLayout
        android:background="@drawable/shape_fragment_bar_ranking"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnColaboradores"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:minHeight="0dp"
            android:padding="0dp"
            android:text="@string/btn_ranking_colaboradores"
            android:background="@android:color/transparent"
            android:textColor="@color/euroBlue"/>

        <Button
            android:id="@+id/btnIdeias"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:minHeight="0dp"
            android:padding="0dp"
            android:text="@string/bnt_ranking_ideias"
            android:background="@android:color/transparent"
            android:textColor="@color/euroBlue" />
    </LinearLayout>

    <LinearLayout
        android:background="@color/btnGrey"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCurtidas"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:minHeight="0dp"
            android:padding="0dp"
            android:text="@string/btn_ranking_ordem"
            android:background="@android:color/transparent"
            android:textColor="@color/euroBlue" />

        <Spinner
            android:id="@+id/spinnerFiltro"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:textColor="@color/euroBlue"
            android:popupBackground="@color/bgWhite" />
    </LinearLayout>
</LinearLayout>
